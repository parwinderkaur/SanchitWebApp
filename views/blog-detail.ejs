<!-- title banner start -->
        <div class="row title-banner mb-80">
            <div class="container-fluid">
                <div class="banner-wrapper">
                    <img class="br-32 w-100" src="/media/images/title-banner.jpg" alt="" >
                    
                    <h2 class="wrapper-content">Blog Detail</h2>
                </div>
            </div>
        </div>
        <!-- title banner End -->

        <!-- Blog Detail Section Start -->
        <section class="blog-detail-sec mb-80">
            <div class="container-fluid">
                <div class="row row-gap-4">
                    <div class="col-lg-12 order-md-2 order-1">
                        <div class="text-center mb-48">
                            <h3 class="fw-400 mb-16"><%= blog.title %></h3>
                            <p class=" mb-4p" style="text-align: end;"><%= moment(blog.dateOfPost).format("DD MMM YYYY") %></p>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <img class="br-12 w-100 mb-16" src="<%= blog.image %>" alt="">
                            </div>
                            <div class="col-md-8">
                                <p class="mb-16" ><%= blog.description %></p>
                                <a 
                                href="<%= settings.whatsappLink %>?text=Hi, I'm interested in your blog of <%= blog.title %> want to know more about it." 
                                target="_blank" 
                                class="btn btn-success btn-sm"  >
                                Ask more!
                                </a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </section>
        <!-- Blog Detail Section End -->
