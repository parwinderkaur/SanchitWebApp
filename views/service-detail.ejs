<!-- title banner start -->
        <div class="row title-banner mb-80">
            <div class="container-fluid">
                <div class="banner-wrapper">
                    <img class="br-32 w-100" src="/media/images/title-banner.jpg" alt="" >
                    
                    <h2 class="wrapper-content">Service Detail</h2>
                </div>
            </div>
        </div>
        <!-- title banner End -->

        <!-- Service Detail Start -->
        <section class="service-detail-sec mb-80">
            <div class="container-fluid">
                <div class="row row-gap-4">
                    <div class="col-lg-3 col-sm-4">
                        <div>
                            <h4 class="fw-400 mb-24">Other Services</h4>
                            <div class="other-services-block active mb-16">
                                <span class="text-18"><%= service.title %></span>
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"
                                        fill="none">
                                        <path
                                            d="M2.17109 11.9201H14.697L10.1248 16.4923C9.58254 17.0345 9.58254 17.9137 10.1248 18.456C10.3959 18.727 10.7513 18.8626 11.1066 18.8626C11.462 18.8626 11.8174 18.727 12.0884 18.4559L19.0309 11.5134C19.5731 10.9712 19.5731 10.092 19.0309 9.54978L12.0884 2.6073C11.5462 2.06514 10.667 2.06514 10.1248 2.6073C9.58254 3.14947 9.58254 4.02866 10.1248 4.57091L14.697 9.14314H2.09408C1.32727 9.14314 0.744191 9.72637 0.744191 10.4932C0.744191 11.26 1.40427 11.9201 2.17109 11.9201Z"
                                            fill="#FF80FF" />
                                    </svg></span>
                                </div>
                            <% servicesList.forEach((service, i) => { %>
                            <a href="/service-detail/<%= service._id %>" class="other-services-block mb-16">
                                <span class="text-18"> <%= service.title %></span>
                                <span><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"
                                        fill="none">
                                        <path
                                            d="M2.17109 11.9201H14.697L10.1248 16.4923C9.58254 17.0345 9.58254 17.9137 10.1248 18.456C10.3959 18.727 10.7513 18.8626 11.1066 18.8626C11.462 18.8626 11.8174 18.727 12.0884 18.4559L19.0309 11.5134C19.5731 10.9712 19.5731 10.092 19.0309 9.54978L12.0884 2.6073C11.5462 2.06514 10.667 2.06514 10.1248 2.6073C9.58254 3.14947 9.58254 4.02866 10.1248 4.57091L14.697 9.14314H2.09408C1.32727 9.14314 0.744191 9.72637 0.744191 10.4932C0.744191 11.26 1.40427 11.9201 2.17109 11.9201Z"
                                            fill="#FF80FF" />
                                    </svg></span>
                            </a>
                            <% }) %>
                        </div>
                    </div>
                    <div class="col-lg-9 col-sm-8">
                        <div class="text-center mb-48">
                            <h3 class="fw-500"><%= service.title %></h3>
                        </div>
                        <div class="row">
                            <div class="col-md-4" style="text-align: center;">
                                <img src="<%= service.image ? service.image : '/media/services/default.png' %>" id="service_img" class="br-16 object-fit-cover w-100" alt="Service Image">
                                <div style="margin-top: 5%;">
                                    <h5 class="price"> @ <%= service.price %></h5>
                                    <a 
                                    href="<%= settings.whatsappLink %>?text=Hi, I'm interested in <%= service.title %>" 
                                    target="_blank" 
                                    class="btn btn-success btn-sm"  >
                                    Book Now on WhatsApp
                                    </a>
                                </div>
                                <div style="margin-top: 5%;">
                                    <span style="display: block; margin-top: 10px; text-align: center; font-weight: 500; font-size: 16px; color: #333;">
                                        Pay using the QR code above and confirm your booking on WhatsApp.
                                    </span>
                                    <img style="margin-top: 5%;" src="/media/QR.jpeg" id="service_img" class="br-16 object-fit-cover w-100" alt="Service Image">
                                    
                                </div>

                            </div>
                            <div class="col-md-8"  style="margin-top: 3%;">
                                <p class="mb-16">
                                    <%= service.description %>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </section>
        <!-- Service Detail End -->